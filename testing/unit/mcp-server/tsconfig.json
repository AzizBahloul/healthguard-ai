{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"],
    "typeRoots": [
      "../../../mcp-server/node_modules/@types",
      "../../../node_modules/@types"
    ],
    "baseUrl": "../../..",
    "paths": {
      "*": ["*", "mcp-server/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.test.ts",
    "../../../mcp-server/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
