# HealthGuard AI - Production Environment Template
# IMPORTANT: Copy to .env and configure all secrets before deployment

# Deployment Platform: aws | azure | gcp | docker | kubernetes | local
DEPLOYMENT_PLATFORM=local
ENVIRONMENT=production

# LLM Configuration: local | api | hybrid
LLM_MODE=local
LOCAL_LLM_PROVIDER=ollama
LOCAL_LLM_HOST=http://localhost:11434
LOCAL_LLM_MODEL=llama3.2:latest

# API LLM (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=healthguard
DATABASE_USER=healthguard_user
DATABASE_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=GENERATE_64_CHAR_RANDOM_STRING
ENCRYPTION_KEY=GENERATE_32_CHAR_RANDOM_STRING

# AWS (if DEPLOYMENT_PLATFORM=aws)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Azure (if DEPLOYMENT_PLATFORM=azure)
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# GCP (if DEPLOYMENT_PLATFORM=gcp)
GCP_PROJECT_ID=
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=

# Monitoring
SENTRY_DSN=
DATADOG_API_KEY=
